import random
import string

def generate_password(length):
    """Generate a random password of given length"""
    characters = string.ascii_letters + string.digits + string.punctuation
    password = ''.join(random.choice(characters) for i in range(length))
    return password

char_limit = int(input("Enter the character limit for the password: "))
password = generate_password(char_limit)

# Display the generated password
print("Generated password: " + password)

# Prompt the user to save the output
save_output = input("Do you want to save the output? (y/n): ")

if save_output.lower() == 'y':
    # Prompt the user for the file path where they want to save the output
    file_path = input("Enter the file path where you want to save the output: ")

    # Write the output to the file
    with open(file_path, 'w') as f:
        f.write("Generated password: " + password)

    print("Output saved to", file_path)
else:
    print("Output not saved.")
